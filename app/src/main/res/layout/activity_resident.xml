<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/bnt_record"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="租借紀錄"
        android:textSize="25dp"
        android:background="#f3e1e1"
        android:textColor="#7d5a5a"/>

    <Button
        android:id="@+id/bnt_rent"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="租借公共設施"
        android:textSize="25dp"
        android:background="#f3e1e1"
        android:textColor="#7d5a5a"/>

    <Button
        android:id="@+id/bnt_ressearchbalance"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="查詢餘額"
        android:textSize="25dp"
        android:background="#f3e1e1"
        android:textColor="#7d5a5a"/>

    <Button
        android:id="@+id/bnt_resusecondition"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="設施使用狀況"
        android:textSize="25dp"
        android:background="#f3e1e1"
        android:textColor="#7d5a5a"/>

    <Button
        android:id="@+id/bnt_resdamagelevel"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="申報設施"
        android:textSize="25dp"
        android:background="#f3e1e1"
        android:textColor="#7d5a5a"/>

</LinearLayout>